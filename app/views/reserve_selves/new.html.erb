<div id="main">

	<section>
		<%= form_with(model: @reserve, url: confirm_reserve_selves_path, method: :post) do |f| %>
			<div class="button-modoru-box">
				<%= link_to "戻る", 'javascript:history.back()', method: :get, class: "button-modoru" %>
			</div>
			<table class="ta1">
				<tr>
					<th>ケアマネージャー名前</th>
					<td><%= f.text_field :user_name %></td>
				</tr>
				<tr>
					<th>ケアマネージャー連絡先</th>
					<td><%= f.text_field :user_phone %></td>
				</tr>
				<tr>
					<th>ショートステイ事業所番号</th>
					<td><%= f.hidden_field :office_id %><%= @reserve.oaccount.office_name %></td>
				</tr>
				<tr>
					<th>利用者名</th>
					<td><%= f.text_area :client_name, size: 10 %>様</td>
				</tr>
				<tr>
					<th>開始日</th>
					<td><%= f.date_field :start_date, size:10, class:"ws" %></td>
				</tr>
				<tr>
					<th>迎えの送迎</th>
					<td><%= f.collection_select :start_transfer_id, Transfer.all, :id, :trans_flg, size:30, class:"ws" %></td>
				</tr>
				<tr>
					<th>終了日</th>
					<td><%= f.date_field :end_date, size:10, class:"ws" %></td>
				</tr>

				<tr>
					<th>送りの送迎</th>
					<td><%= f.collection_select :end_transfer_id, Transfer.all, :id, :trans_flg, size:30, class:"wl" %></td>
				</tr>
				<tr>
					<th>過去に利用がありますか</th>
					<td><%= f.collection_select :past_use_id, Past.all, :id, :past_use,  size:1, class:"wl" %></td>
				</tr>
				<tr>
					<th>備考欄</th>
					<td><%= f.text_area :remark, size: "30x5", class:"wl" %></td>
				</tr>
			</table>

			<!-- entry_flg 表示せずに、flg="no_entry_status"というデータを入れます-->
			<%= f.hidden_field :entry_flg %>
			<p class="c">
				<%= f.submit "内容を確認する", class:"btn" %>
			</p>
		<% end %>
	</section>

</div>
<!--/#main-->
