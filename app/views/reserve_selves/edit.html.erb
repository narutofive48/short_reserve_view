<div id="main">

	<section>
		<%= form_with(model: @reserve, url: edit_confirm_reserve_self_path, method: :POST) do |f| %>
			<table class="ta1">
				<tr>
					<th>ケアマネジャー</th>
					<td><%= f.hidden_field :user_id %><%= @reserve.display_user_name %></td>
				</tr>
				<tr>
					<th>ショートステイ番号</th>
					<td><%= f.hidden_field :office_id %><%= @reserve.oaccount.office_name %></td>
				</tr>
				<tr>
					<th>利用者名</th>
					<td><%= f.hidden_field :client_name %><%= "#{ @reserve.client_name } 様" if @reserve.client_name.present? %></td>
				</tr>

				<tr>
					<th>開始日</th>
					<td><%= f.date_field :start_date, size:10, class:"ws" %></td>
				</tr>
				<tr>
					<th>迎えの送迎</th>
					<td><%= f.collection_select :start_transfer_id, Transfer.all, :id, :trans_flg, size:30, class:"ws" %></td>
				</tr>
				<tr>
					<th>終了日</th>
					<td><%= f.date_field :end_date, size:10, class:"ws" %></td>
				</tr>

				<tr>
					<th>送りの送迎</th>
					<td><%= f.collection_select :end_transfer_id, Transfer.all, :id, :trans_flg,  size:30, class:"wl" %></td>
				</tr>
				<tr>
					<th>過去に利用がありますか</th>
					<td><%= f.hidden_field :past_use_id %><%= @reserve.past_use.past_use %></td>
				</tr>
				<tr>
					<th>備考欄</th>
					<td><%= f.hidden_field :remark %><%= @reserve.remark %></td>
				</tr>
			</table>
			<!-- entry_flg 表示せずに、flg="no_entry_status"というデータを入れます-->
			<%= f.hidden_field :entry_flg %>
			<p class="c">
				<%= f.submit "編集内容を確認する", class:"btn" %>
			</p>
		<% end %>
	</section>

</div>
<!--/#main-->
