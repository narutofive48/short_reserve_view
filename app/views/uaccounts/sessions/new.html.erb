<div id="main">

	<section>
    <div class="box">
      <div class="box-inner">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h2>ケアマネジャーログイン</h2>
          <div class="box-email">
            <%= f.label :email, "登録したe-mail" %>）<br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="box-password">
            <div class="a-row">
              <div class="column-left">
                <%= f.label :password, "パスワード" %><br />
              </div>
              <div class="column-right">
                <%= link_to "パスワードを忘れた場合", new_password_path(resource_name) %>
              </div>
            </div>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
          <%= hidden_field_tag "back_url", params[:back_url] %>

          <div class="box-login">
            <%= f.submit "ログイン" %>
            <div class="legal-text">
              Picotを利用して、時間を短縮しましょう
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="remember">
                <%= f.check_box :remember_me %>
                <%= f.label :remember, "ログインしたままにする" %>
              </div>
            <% end %>
          </div>

          <div class="box-newusr">
            <p><span>-------</span> Picotは初めてですか？ <span>-------</span></p>
            <%= link_to "Picot新規登録（アカウントを作成）", new_registration_path(resource_name) %>
          </div>
        <% end %>
      </div>
    </div>
	</section>
</div>
