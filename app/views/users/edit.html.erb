<div id="main">

<section>

	<%= form_with(model: @uaccount, url: confirm_user_path, method: :post) do |f| %>
		<table class="ta1">
			<tr>
				<th>お名前</th>
				<td><%= f.text_field :user_name, size:30, class:"ws" %></td>
			</tr>
			<tr>
				<th>メールアドレス</th>
				<td><%= f.hidden_field :email %><% @uaccount=Uaccount.find(params[:id]) %><%= @uaccount.email %></td>
			</tr>
			<tr>
				<th>事業所名</th>
				<td><%= f.text_field :user_office,  size:30, class:"ws" %></td>
			</tr>
			<tr>
				<th>電話番号</th>
				<td><%= f.text_field :user_phone, size:30, class:"ws" %></td>
			</tr>
			<tr>
				<th>お知らせ</th>
				<td>
				<%= f.check_box :commerce, {}, "allow_send_mail", "deny_send_mail" %>
				<%= f.label :commerce, "ソフトウェアのアップデート情報などのお知らせメールを希望します。"  %>
				</td>
			</tr>
		</table>
		<p class="c">
			<input type="submit" value="内容を確認する" class="btn">
		</p>
	<% end %>

</section>

</div>
<!--/#main-->
