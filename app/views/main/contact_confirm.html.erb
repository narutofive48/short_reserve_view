<div id="main">
	<section>

	<h2>お問い合わせ</h2>

	<h3>フォームからのお問い合わせ</h3>


		<%= form_with(model: @contact, url: send_contact_main_index_path, method: :post) do |f| %>
			<table class="ta1">
				<tr>
					<th>お名前※</th>
					<td><%= f.hidden_field :name %><%= @contact.name %></td>
				</tr>
				<tr>
					<th>メールアドレス※</th>
					<td><%= f.hidden_field :mailaddress %><%= @contact.mailaddress %></td>
				</tr>
				<tr>
					<th>お問い合わせ詳細※</th>
					<td><%= f.hidden_field :text %><%= @contact.text %></td>
				</tr>
			</table>
			<p class="c">
				<%= f.submit "この内容で送信する", class:"btn" %>
			</p>
		<% end %>
	</section>
</div>
